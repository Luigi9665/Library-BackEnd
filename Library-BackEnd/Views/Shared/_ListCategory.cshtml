@model List<Library_BackEnd.Models.Entity.Category>





<div class="books-container">
    <div class="books-header">
        <h2>LISTA Categorie</h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-wrapper">
            <table class="books-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th class="center" style="width: 200px;">Data Creazione</th>
                        <th class="center" style="width: 150px;">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model)
                    {
                        <tr>
                            <td>
                                <p class="book-title">@cat.Id</p>
                            </td>
                            <td>
                                 <p class="book-title">@cat.Name</p>
                            </td>
                            <td class="book-title">
                                <p class="book-title">@cat.CreatedAt</p>
                            </td>
                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <a asp-controller="Category" asp-action="ToUpdate" asp-route-id="@cat.Id" class="action-btn btn-edit" title="Modifica">
                                        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                    </a>
                                    <form asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" method="post" style="margin: 0; display: inline;" onsubmit="return confirm('Sei sicuro di voler eliminare questa Category?');">
                                        <button type="submit" class="action-btn btn-delete" title="Elimina">
                                            <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="table-wrapper">
            <div class="empty-state">
                <div class="empty-state-icon">📚</div>
                <h2>Nessuna Category presente</h2>
            </div>
        </div>
    }
</div>