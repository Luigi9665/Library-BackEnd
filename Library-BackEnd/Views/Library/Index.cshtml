@using Library_BackEnd.Models.Dto
@model ListForIndex

@{
    ViewData["Title"] = "Library Epicode";
}


<partial name="_ModalFilter" model="@Model.Categories" />

<div class="library-container">
    <div class="library-header">
        <h1>LIBRARY EPICODE</h1>
    </div>
    @if (TempData["Message"] != null)
    {
        <div id="TempAlert" class="alert alert-success mt-3">@TempData["Message"]</div>
    }

    @if (Model.Books != null && Model.Books.Any())
    {
        <div class="books-grid">
            @foreach (var book in Model.Books)
            {
                <div class="book-card">
                    @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                    {
                        <img src="@book.CoverImageUrl" alt="@book.Title" class="book-cover" />
                    }
                    else
                    {
                        <div class="book-cover"></div>
                    }
                    <div class="book-info">
                        <h3 class="book-title pb-1">@book.Title</h3>
                        <p class="text-white-50 mb-2">@book.NameCategory</p> 
                        <div class="availability-status">
                            <span class="led-indicator @(book.IsAvailable ? "available" : "unavailable")"></span>
                            <span>@(book.IsAvailable ? "Disponibile" : "Non disponibile")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">📚</div>
            <h2>Nessun libro presente nella biblioteca</h2>
            <a asp-controller="Library" asp-action="BackOffice" class="add-book-btn">Aggiungi il primo libro</a>
        </div>
    }
</div>


@section Scripts {
    <script>
        function toggleFilterSidebar() {
            const sidebar = document.getElementById('filterSidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const toggleBtn = document.getElementById('filterToggleBtn');

            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
            toggleBtn.classList.toggle('active');
        }

        function resetFilters() {
            document.getElementById('filterForm').reset();
            window.location.href = '@Url.Action("Index", "Library")';
        }

        // Close sidebar on ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const sidebar = document.getElementById('filterSidebar');
                if (sidebar.classList.contains('active')) {
                    toggleFilterSidebar();
                }
            }
        });
    </script>
}