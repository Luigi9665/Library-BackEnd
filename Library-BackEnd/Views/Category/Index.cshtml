@model Library_BackEnd.Models.Dto.CategoryViewModal;

@{
    ViewData["Title"] = "Gestione Category";
}

<div>
    <section>
        <partial name="_FormCategory" model="Model.CategoryToEdit" />
    </section>

    @if (TempData["Message"] != null)
    {
        <div id="TempAlert" class="alert alert-success mt-3">@TempData["Message"]</div>
    }


    <hr />
    <section>
        <partial name="_ListCategory" model="Model.Categories" />
    </section>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        function ReturnToBackoffice() {
            console.log("Sei dentro annulla");
            window.location.replace("/Category");
        }

        if (document.getElementById("TempAlert")) {
            setTimeout(function () {
                var alertBox = document.getElementById("TempAlert");
                alertBox.style.transition = "opacity 0.5s ease-out";
                alertBox.style.opacity = "0";
                setTimeout(function () {
                    alertBox.remove();
                }, 500);
            }, 3000);
		}

    </script>
}